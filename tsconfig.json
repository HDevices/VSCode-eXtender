{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./out",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vscode"]
  },
  "include": [
    "extension/**/*",
    "server/**/*",
    "client/**/*",
    "shared/**/*"
  ],
  "exclude": ["node_modules", ".vscode-test"]
}
