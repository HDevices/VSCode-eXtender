{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./out",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "types": ["node", "vscode"]
  },
  "include": [
    "extension/**/*.ts",
    "server/**/*.ts",
    "client/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": ["node_modules", ".vscode-test"]
}
